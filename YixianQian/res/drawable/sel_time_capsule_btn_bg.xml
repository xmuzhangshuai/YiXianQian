<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <corners android:radius="10dp" />

            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/system_gray" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="10dp" />

            <solid android:color="@color/system_male" />

            <stroke android:width="0dp" android:color="@color/system_gray" />
        </shape></item>

</selector>