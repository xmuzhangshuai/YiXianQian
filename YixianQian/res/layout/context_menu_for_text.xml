<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp" >

    <TextView
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/context_menu_item_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="copy"
        android:padding="10dp"
        android:text="@string/copy_message"
        android:textColor="@android:color/black"
        android:textSize="@dimen/day_recommend_user_font" />

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/system_gray" />

    <TextView
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/context_menu_item_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="delete"
        android:padding="10dp"
        android:text="@string/delete_message"
        android:textColor="@android:color/black"
        android:textSize="@dimen/day_recommend_user_font" />

</RelativeLayout>