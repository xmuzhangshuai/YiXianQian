<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_back"
    android:orientation="vertical"
    android:padding="@dimen/day_recommend_dot_space" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/register_school_info"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/day_recommend_user_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/day_recommend_dot_margin_top"
        android:background="@drawable/shape_radius"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:text="省份"
                android:textColor="@color/system_gray"
                android:textSize="@dimen/day_recommend_user_font" />

            <Spinner
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:paddingLeft="@dimen/day_recommend_help_padding"
                android:prompt="@string/province" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:text="城市"
                android:textColor="@color/system_gray"
                android:textSize="@dimen/day_recommend_user_font" />

            <Spinner
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:paddingLeft="@dimen/day_recommend_help_padding"
                android:prompt="@string/city" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:text="学校"
                android:textColor="@color/system_gray"
                android:textSize="@dimen/day_recommend_user_font" />

            <Spinner
                android:id="@+id/school"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:paddingLeft="@dimen/day_recommend_help_padding"
                android:prompt="@string/school" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>